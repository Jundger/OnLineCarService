<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aliceblue"
        android:padding="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/orderno_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text="20181003021655233" />

            <LinearLayout
                android:id="@+id/order_status_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/order_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/appThemeColor"
                    android:textSize="17sp"
                    android:text="已完成" />

                <ImageView
                    android:id="@+id/order_enter_iv"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/icon_profile_arrow"/>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">
            <ImageView
                android:id="@+id/order_resolver_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_resoler_icon"/>
            <TextView
                android:id="@+id/order_resolver_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="12"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toRightOf="@+id/order_resolver_iv"
                android:layout_toEndOf="@+id/order_resolver_iv"
                android:text="重庆长安铃木汽车销售服务有限公司" />

            <ImageView
                android:id="@+id/order_distance_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginStart="230dp"
                android:src="@drawable/order_distance_icon"/>
            <TextView
                android:id="@+id/order_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toRightOf="@+id/order_distance_iv"
                android:layout_toEndOf="@+id/order_distance_iv"
                android:textColor="@color/black"
                android:text="1.62km" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">
            <ImageView
                android:id="@+id/order_describe_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_describe_icon"/>
            <TextView
                android:id="@+id/order_describe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toRightOf="@+id/order_describe_iv"
                android:layout_toEndOf="@+id/order_describe_iv"
                android:text="排气阀门正时控制位置传感器-电路故障; 一般由安全带传感器，其电路或接头故障所致;"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/order_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:text="2018-10-06 18:34:21" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>