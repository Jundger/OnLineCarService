<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!--<stroke android:width="0.5dp" android:color="@color/color_black" />-->
            <!-- 填充的颜色 -->
            <solid android:color="@color/highlight_text" />
            <size android:height="55dp"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="20dip" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!--<stroke android:width="0.5dp" android:color="@color/color_black" />-->
            <!-- 填充的颜色 -->
            <solid android:color="@color/hint_foreground_light" />
            <size android:height="55dp"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="20dip" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!--<stroke android:width="0.5dp" android:color="@color/color_black" />-->
            <!-- 填充的颜色 -->
            <solid android:color="#00EEEE" />
            <size android:height="55dp"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="20dip" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>
</selector>
